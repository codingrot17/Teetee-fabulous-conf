        <!-- Sidebar Overlay for mobile -->
        <div class="sidebar-overlay" :class="{ 'show': sidebarOpen }" @click="sidebarOpen = false"></div>
        
        <!-- Main Content -->
        <main class="main-content" :class="{ 'sidebar-collapsed': !sidebarOpen }">
            <!-- Header -->
            <header class="header">
                <div class="header-left">
